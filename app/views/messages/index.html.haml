//sidebarの読み込み
= render "sidebar"

.chat
  .chatheader
    .left-header
      .chattitle
        = @group.name
      .chatmember
        Member :
        - @group.users.each do |user|
          =user.name
    .right-header
      = link_to "Edit", edit_group_path(@group), class: "right-header__button"

  .chatgroups
    = render partial: 'message', collection: @messages

  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: "messageform", placeholder: 'type a message'
      .form_mask
        =f.label :image, class: "icon" do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'imageform', style: 'display:none'
      = f.submit 'Send', class: 'sendbutton'


